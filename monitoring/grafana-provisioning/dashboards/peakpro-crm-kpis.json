{
    "dashboard": {
        "id": null,
        "uid": "peakpro_crm_kpis",
        "title": "PeakPro CRM - KPIs",
        "tags": [
            "crm",
            "peakpro"
        ],
        "timezone": "browser",
        "schemaVersion": 38,
        "version": 1,
        "refresh": "30s",
        "panels": [
            {
                "id": 1,
                "type": "stat",
                "title": "Leads Created (24h)",
                "gridPos": {
                    "x": 0,
                    "y": 0,
                    "w": 6,
                    "h": 6
                },
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    }
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "green",
                                    "value": null
                                },
                                {
                                    "color": "yellow",
                                    "value": 50
                                },
                                {
                                    "color": "red",
                                    "value": 100
                                }
                            ]
                        }
                    }
                },
                "targets": [
                    {
                        "expr": "sum(increase(crm_leads_created_total[24h]))",
                        "refId": "A",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ]
            },
            {
                "id": 2,
                "type": "gauge",
                "title": "API p95 Latency (5m)",
                "gridPos": {
                    "x": 6,
                    "y": 0,
                    "w": 6,
                    "h": 6
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "ms",
                        "min": 0,
                        "max": 1000,
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "green",
                                    "value": null
                                },
                                {
                                    "color": "yellow",
                                    "value": 300
                                },
                                {
                                    "color": "red",
                                    "value": 600
                                }
                            ]
                        }
                    }
                },
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, sum(rate(crm_request_latency_seconds_bucket[5m])) by (le)) * 1000",
                        "refId": "A",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ]
            },
            {
                "id": 3,
                "type": "stat",
                "title": "Auth Success Rate (24h)",
                "gridPos": {
                    "x": 12,
                    "y": 0,
                    "w": 6,
                    "h": 6
                },
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    }
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "percentunit",
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "red",
                                    "value": null
                                },
                                {
                                    "color": "yellow",
                                    "value": 0.8
                                },
                                {
                                    "color": "green",
                                    "value": 0.95
                                }
                            ]
                        }
                    }
                },
                "targets": [
                    {
                        "expr": "sum(increase(crm_auth_attempts_total{result=\"success\"}[24h])) / sum(increase(crm_auth_attempts_total[24h]))",
                        "refId": "A",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ]
            },
            {
                "id": 4,
                "type": "timeseries",
                "title": "Leads by Source (Rate)",
                "gridPos": {
                    "x": 0,
                    "y": 6,
                    "w": 12,
                    "h": 8
                },
                "fieldConfig": {
                    "defaults": {
                        "custom": {
                            "drawStyle": "line",
                            "lineInterpolation": "linear",
                            "fillOpacity": 10
                        },
                        "unit": "short"
                    }
                },
                "options": {
                    "legend": {
                        "displayMode": "list",
                        "placement": "bottom"
                    }
                },
                "targets": [
                    {
                        "expr": "sum by (source) (rate(crm_leads_created_total[5m]))",
                        "refId": "A",
                        "legendFormat": "{{source}}",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ]
            },
            {
                "id": 5,
                "type": "timeseries",
                "title": "API Request Latency (p50, p95, p99)",
                "gridPos": {
                    "x": 12,
                    "y": 6,
                    "w": 12,
                    "h": 8
                },
                "fieldConfig": {
                    "defaults": {
                        "custom": {
                            "drawStyle": "line",
                            "lineInterpolation": "linear"
                        },
                        "unit": "ms"
                    }
                },
                "targets": [
                    {
                        "expr": "histogram_quantile(0.50, sum(rate(crm_request_latency_seconds_bucket[5m])) by (le, route)) * 1000",
                        "refId": "A",
                        "legendFormat": "p50 - {{route}}",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    },
                    {
                        "expr": "histogram_quantile(0.95, sum(rate(crm_request_latency_seconds_bucket[5m])) by (le, route)) * 1000",
                        "refId": "B",
                        "legendFormat": "p95 - {{route}}",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    },
                    {
                        "expr": "histogram_quantile(0.99, sum(rate(crm_request_latency_seconds_bucket[5m])) by (le, route)) * 1000",
                        "refId": "C",
                        "legendFormat": "p99 - {{route}}",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ]
            },
            {
                "id": 6,
                "type": "table",
                "title": "Auth Attempts (24h)",
                "gridPos": {
                    "x": 0,
                    "y": 14,
                    "w": 12,
                    "h": 6
                },
                "targets": [
                    {
                        "expr": "sum by (result) (increase(crm_auth_attempts_total[24h]))",
                        "refId": "A",
                        "format": "table",
                        "instant": true,
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ]
            },
            {
                "id": 7,
                "type": "stat",
                "title": "Invoices Created (24h)",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 0,
                    "y": 20
                },
                "options": {
                    "reduceOptions": {
                        "calcs": [
                            "lastNotNull"
                        ],
                        "fields": "",
                        "values": false
                    },
                    "colorMode": "value",
                    "graphMode": "none",
                    "justifyMode": "auto",
                    "orientation": "horizontal"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "none",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "red"
                                },
                                {
                                    "color": "green",
                                    "value": 1
                                }
                            ]
                        }
                    },
                    "overrides": []
                },
                "targets": [
                    {
                        "expr": "sum(crm:invoices_created_24h:by_org)",
                        "legendFormat": "created",
                        "refId": "A",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ]
            },
            {
                "id": 8,
                "type": "stat",
                "title": "Invoices Paid (24h)",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 6,
                    "y": 20
                },
                "options": {
                    "reduceOptions": {
                        "calcs": [
                            "lastNotNull"
                        ],
                        "fields": "",
                        "values": false
                    },
                    "colorMode": "value",
                    "graphMode": "none",
                    "justifyMode": "auto",
                    "orientation": "horizontal"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "none",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "red"
                                },
                                {
                                    "color": "green",
                                    "value": 1
                                }
                            ]
                        }
                    },
                    "overrides": []
                },
                "targets": [
                    {
                        "expr": "sum(crm:invoices_paid_24h:by_org)",
                        "legendFormat": "paid",
                        "refId": "A",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ]
            },
            {
                "id": 9,
                "type": "timeseries",
                "title": "Revenue (7 days)",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 20
                },
                "options": {
                    "legend": {
                        "displayMode": "list",
                        "placement": "bottom"
                    },
                    "tooltip": {
                        "mode": "single"
                    }
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "currencyUSD",
                        "decimals": 2
                    },
                    "overrides": []
                },
                "targets": [
                    {
                        "expr": "sum(crm:revenue_usd:by_org)",
                        "legendFormat": "revenue",
                        "refId": "A",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ],
                "timeFrom": "7d"
            },
            {
                "id": 10,
                "type": "gauge",
                "title": "Invoice Payment Rate (30d)",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 0,
                    "y": 24
                },
                "options": {
                    "reduceOptions": {
                        "calcs": [
                            "lastNotNull"
                        ],
                        "fields": "",
                        "values": false
                    },
                    "showThresholdLabels": true,
                    "showThresholdMarkers": true,
                    "min": 0,
                    "max": 100
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "percent",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "red",
                                    "value": 0
                                },
                                {
                                    "color": "orange",
                                    "value": 50
                                },
                                {
                                    "color": "yellow",
                                    "value": 70
                                },
                                {
                                    "color": "green",
                                    "value": 85
                                }
                            ]
                        }
                    },
                    "overrides": []
                },
                "targets": [
                    {
                        "expr": "sum(crm:payment_rate_30d_pct:by_org)",
                        "legendFormat": "rate %",
                        "refId": "A",
                        "datasource": {
                            "type": "prometheus",
                            "uid": "prometheus"
                        }
                    }
                ]
            }
        ]
    },
    "folderId": 0,
    "overwrite": true
}
