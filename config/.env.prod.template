# =========================================================
# AetherLink - Production Environment Template
# Copy to: config/.env.prod
# Then fill in real URLs / secrets
# =========================================================

# -----------------
# Core service URLs
# -----------------
COMMAND_CENTER_URL=http://aether-command-center:8010
AI_ORCHESTRATOR_URL=http://aether-ai-orchestrator:8011
AUTO_HEAL_URL=http://aether-auto-heal:8012
UI_URL=http://aether-crm-ui:5173

# -----------------
# Health endpoints
# -----------------
UI_HEALTH_URL=http://aether-crm-ui:5173/health.json
COMMAND_CENTER_HEALTH_URL=http://aether-command-center:8010/ops/health
AI_ORCHESTRATOR_HEALTH_URL=http://aether-ai-orchestrator:8011/health
AUTO_HEAL_HEALTH_URL=http://aether-auto-heal:8012/health

# -----------------
# Auto-Heal config
# watches the 3 services + UI you finished in v1.8.0
# -----------------
AUTOHEAL_SERVICES=["aether-crm-ui","aether-command-center","aether-ai-orchestrator"]
AUTOHEAL_HEALTH_ENDPOINTS={
  "aether-crm-ui": "http://aether-crm-ui:5173/health.json",
  "aether-command-center": "http://aether-command-center:8010/ops/ping",
  "aether-ai-orchestrator": "http://aether-ai-orchestrator:8011/ping"
}
AUTOHEAL_INTERVAL_SECONDS=30

# -----------------
# AI Orchestrator v2 (v1.10.0)
# order is highest â†’ lowest priority
# -----------------
PROVIDER_ORDER=claude,ollama,openai

# Fill these with your actual endpoints/tokens if you have them
PROVIDER_CLAUDE_URL=http://host.docker.internal:9991
PROVIDER_OLLAMA_URL=http://host.docker.internal:11434
PROVIDER_OPENAI_URL=https://api.openai.com/v1/chat/completions
PROVIDER_OPENAI_API_KEY=REPLACE_ME

# -----------------
# RBAC / Security (v1.4.0, v1.11.0)
# these are example defaults; your real gateway/SSO will inject JWTs
# -----------------
DEFAULT_OPERATOR_ROLE=operator
DEFAULT_ADMIN_ROLE=admin

# -----------------
# Logging / audit (v1.11.0)
# -----------------
AUDIT_ENABLED=true
AUDIT_BUFFER_LIMIT=500

# -----------------
# Phase VII M1: Alert Notifications (v1.17.0)
# Comma-separated webhook URLs (Slack, Teams, Discord, generic HTTP)
# Example Slack: https://hooks.slack.com/services/T000/B000/XXX
# Example Teams: https://outlook.office.com/webhook/XXX
# Example Discord: https://discord.com/api/webhooks/XXX
# Leave empty to disable webhook notifications
# -----------------
ALERT_WEBHOOKS=

# -----------------
# Optional: Grafana / metrics (keep for future phases)
# -----------------
GRAFANA_URL=http://host.docker.internal:3000
PROMETHEUS_URL=http://host.docker.internal:9090
