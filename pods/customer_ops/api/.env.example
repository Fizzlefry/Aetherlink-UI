# ----- App -----
ENV=dev
DEBUG=true
APP_NAME=CustomerOps

# ----- Logging -----
LOG_LEVEL=INFO

# ----- CORS -----
CORS_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=*

# ----- Hosts -----
# Comma-separated list. Use * sparingly; TrustedHostMiddleware will enforce this.
ALLOWED_HOSTS=localhost,127.0.0.1

# ----- Rate limits -----
RATE_LIMIT_FALLBACK=60/minute
RATE_LIMIT_FAQ=10/minute
RATE_LIMIT_CHAT=30/minute

# ----- Redis -----
REDIS_URL=redis://localhost:6379/0
REDIS_SOCKET_TIMEOUT=2.0
REDIS_SOCKET_CONNECT_TIMEOUT=2.0

# ----- Database (optional) -----
# DB_URL=postgresql+psycopg://user:pass@localhost:5432/dbname

# ----- Auth (optional) -----
REQUIRE_API_KEY=true
# Accepts "key1,key2" OR tenant mapping "tenantA:keyA,tenantB:keyB"
API_KEYS=

# Per-tenant API keys (preferred). Example tenants:
API_KEY_EXPERTCO=ABC123
API_KEY_ARGUS=XYZ789

# Admin key for protected ops endpoints (e.g., /ops/reload-auth)
API_ADMIN_KEY=

# ----- Feature Flags (A/B testing, hot-disable) -----
ENABLE_MEMORY=true
ENABLE_ENRICHMENT=true

# ----- Model Provider (LLM for chat) -----
# Set which provider powers the /chat endpoints
# Options: ollama | openai | gemini | anthropic
MODEL_PROVIDER=ollama
MODEL_NAME=llama3

# OpenAI (if MODEL_PROVIDER=openai)
OPENAI_API_KEY=

# Google Gemini (if MODEL_PROVIDER=gemini)
GOOGLE_API_KEY=

# Anthropic Claude (if MODEL_PROVIDER=anthropic)
ANTHROPIC_API_KEY=
ANTHROPIC_ENDPOINT=https://api.anthropic.com/v1/messages
