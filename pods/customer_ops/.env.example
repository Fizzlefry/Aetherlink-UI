# AetherLink Customer Ops Environment Configuration
# Copy this to .env and customize for your deployment

# API Security
# Admin API key for privileged operations
API_ADMIN_KEY=your-admin-secret-here
API_KEY_EXPERTCO=test-key
REQUIRE_API_KEY=false

# Database Paths
DUCKDB_PATH=/app/data/knowledge.duckdb
DATABASE_URL=sqlite:////app/local.db
AUDIT_PATH=/app/data/audit/ops.jsonl

# Feature Flags
DUCKDB_MIRROR_SQLITE=0

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# PII Redaction (Privacy/Compliance)
# Controls automatic redaction of sensitive data during ingestion
PII_REDACT=on  # Set to 'off' to disable
PII_REDACT_TYPES=email,phone,ssn,cc  # Comma-separated: email, phone, ssn (SSN), cc (credit card)
PII_PLACEHOLDERS=email:[EMAIL],phone:[PHONE],ssn:[SSN],cc:[CARD]  # Replacement strings

# Embeddings Configuration
EMBED_PROVIDER=gemini
EMBED_MODEL=text-embedding-3-small
# EMBEDDING_DIM=768  # Auto-detected from embeddings

# Environment
ENV=dev
LOG_LEVEL=INFO
