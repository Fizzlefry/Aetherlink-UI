# AI Agent Bridge Configuration

# Port the bridge listens on
AI_BRIDGE_PORT=3001

# Command Center API base URL
COMMAND_CENTER_API=http://localhost:8010

# Vertical Apps Integration
PEAKPRO_URL=http://localhost:8021
ROOFWONDER_URL=http://localhost:8022
POLICYPAL_URL=http://localhost:8023

# CORS configuration (comma-separated origins, or * for all)
# Production: Set to your agent's origin only
# Development: Use * for testing
CORS_ORIGINS=*

# Minimum severity to include in snapshots (info, warning, critical)
# Filters out lower-severity anomalies to reduce noise
MIN_SEVERITY=info

# Enable verbose logging for debugging
DEBUG=false
