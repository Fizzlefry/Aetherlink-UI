ENV=dev

# ── Database (Postgres/pgvector) ──
DB_HOST=db
DB_PORT=5432
DB_NAME=aetherlink
DB_USER=aether
DB_PASS=devpass

# ── Redis (jobs / future caching) ──
REDIS_HOST=redis
REDIS_PORT=6379

# ── Object Store (MinIO S3-compatible) ──
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=miniopass
MINIO_BUCKET=aetherlink-audio

# ── Tenant / Branding ──
TENANT_ID=the-expert-co
COMPANY_NAME="The Expert Co."

# ── Model Routing ──
# ollama = local model on your machine
# cloud  = external provider we call by API
LLM_PROVIDER=ollama
XAI_API_KEY=

# ── Agent Model Client (CustomerOps API) ──
# MODEL_PROVIDER: "ollama" (local), "openai" (GPT-4o-mini), or "gemini" (Gemini-1.5-pro)
MODEL_PROVIDER=ollama
MODEL_NAME=llama3
# API keys for cloud providers (only needed if using openai or gemini)
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=AIzaSy...
# Ollama base URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# ── Future: Calendar Integration ──
GOOGLE_CREDENTIALS_PATH=

# ── Future: Twilio SMS/voice ──
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# ── Contributor Environment Variables ──
PYTHONPATH=.
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=postgresql+psycopg2://aether:aetherpass@localhost:5432/aetherlink

# Per-tenant API keys (preferred)
API_KEY_EXPERTCO=ABC123
API_KEY_ARGUS=XYZ789

# Legacy fallback (optional)
# API_KEYS_CSV=ABC123,XYZ789

# Enforce API keys?
REQUIRE_API_KEY=true

# Optional admin guard for /ops/reload-auth
API_ADMIN_KEY=CHANGE_ME

LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# ── Autoheal OIDC Authentication (Production) ──
# Enable OIDC protection for /audit, /console, /ack endpoints
OIDC_ENABLED=false  # Set to true for production
# OIDC Provider's discovery endpoint
OIDC_ISSUER=https://YOUR_DOMAIN/.well-known/openid-configuration
# Expected audience claim in JWT
OIDC_AUDIENCE=peakpro-api
# Optional: Override JWKS URI (if not discoverable)
# OIDC_JWKS_URI=https://YOUR_DOMAIN/.well-known/jwks.json

# ── UI Testing / Auth Bypass ──
# Set to "true" to disable Keycloak authentication in the UI (for testing/CI)
VITE_AUTH_DISABLED=false

# ── Autoheal Configuration ──
AUTOHEAL_ENABLED=true
AUTOHEAL_DRY_RUN=true  # Set to false for production
AUTOHEAL_PUBLIC_URL=http://localhost:9009
AUTOHEAL_AUDIT_PATH=/data/audit.jsonl